<?xml version="1.0" encoding="UTF-8"?>

<config>

    <import name="sqls"            class="java.util.ArrayList" />
    <import name="sql"             class="org.hy.common.xml.XSQL" />



    <sqls>

        <sql id="XSQL_OPCDD_Model_Query">

            <content>
                <![CDATA[
                SELECT  A.id
                       ,A.domainID
                       ,A.modelName
                       ,A.modelLevel
                       ,A.projectID
                       ,A.comment
                       ,A.isDel
                       ,A.createUserID
                       ,A.updateUserID
                       ,A.createTime
                       ,A.updateTime
                       , (
                         SELECT  COUNT(1)
                           FROM  TFavoriteData  SA
                          WHERE  SA.updateUserID = ':userID'
                            AND  SA.serviceType  = 'ApiConfig'
                            AND  SA.dataID       = A.id
                            AND  SA.isDel        = 0
                        )    AS  isFavorite
                  FROM  TModel  A
                 WHERE  A.isDel         = 0
              <[   AND  A.id            = ':id'               ]>
              <[   AND  A.domainID      :domainID             ]>
              <[   AND  A.modelName    LIKE '%:modelName%'    ]>
              <[   AND  A.modelLevel    = ':modelLevel'       ]>
              <[   AND  A.projectID     = ':projectID'        ]>
               <[   AND  (
                         SELECT  COUNT(1)
                           FROM  TFavoriteData  SA
                          WHERE  SA.updateUserID = ':userID'
                            AND  SA.serviceType  = 'DomainSpace'
                            AND  SA.dataID       = A.id
                            AND  SA.isDel        = 0
                        ) >= :isFavorite                        ]>
                 ORDER  BY A.updateTime DESC
                ]]>
            </content>

            <condition>
                <name>domainID</name>
                <if><![CDATA[:isBind == 0 ]]></if>
                <true>is NULL</true>
                <if><![CDATA[:isBind == 1 ]]></if>
                <true>is not NUll</true>
                <false>=':domainID'</false>
            </condition>

            <result>
                <!--节点定义查询结果集，其值为Java类的全路径。默认值为java.util.ArrayList-->
                <table>java.util.LinkedHashMap</table>
                <!--定义行级对象填充到表级对象的填充方法名-->
                <fill>put(row.id ,row)</fill>
            </result>

        </sql>


        <sql id="XSQL_User_Condition"> 
        
            <content>
                <![CDATA[
                SELECT  A.userName
                       ,A.pwd
                       ,':createTime'  AS createTime
                  FROM  User  A
                 WHERE  A.userName = ':userName'
                   AND  A.pwd      = ':password'
              <[   AND  A.orgName  = ':orgName'    ]>
                ]]>
            </content>
            
            <!-- 当用户名称为admin时，自动翻译为administrator用户名称登陆 -->
            <condition>
                <name>userName</name>
                <if>:userName == 'admin'</if>
                <true>administrator</true>
                <false>:userName</false>   <!-- 也可以写成 this -->
            </condition>
            
            <!-- 密码验证 -->
            <condition>
                <name>password</name>
                <if><![CDATA[{:password}.length() >= 6 && {:password}.length() <= 16]]></if>
                <false>密码长度验证未通过</false>
            </condition>
            
            <!-- 部门名称是目录时，不参与Where条件过滤 -->
            <condition>
                <name>orgName</name>
                <if><![CDATA[:orgName == '根目录']]></if>
                <true>NULL</true>
                <false>THIS</false>
            </condition>
            
        </sql>
        
        
        
        <sql id="XSQL_User_Condition_Update"> 
        
            <content>
                <![CDATA[
                UPDATE  User
                   SET  id         = id
                <[     ,A.userName = ':userName'  ]>
                <[     ,price      = :price       ]>
                 WHERE  id         = :id    
                ]]>
            </content>
            
            <!-- 当用户名称为admin时，自动翻译为administrator用户名称登陆 -->
            <condition>
                <name>price</name>
                <if>:price == 0</if>
                <true>NULL</true>
                <false>THIS</false>
            </condition>
            
        </sql>
        
    </sqls>
    
</config>